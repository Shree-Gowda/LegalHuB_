<% layout("layouts/boilerplate") %>

<style>
    /* ✅ Main Container - Inspired by documents.ejs */
    .rights-page {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 24px;
        min-height: 100vh;
    }

    /* ✅ Header Section - Theme-aware gradient */
    .page-header {
        text-align: center;
        margin-bottom: 40px;
        padding: 50px 0;
        background: linear-gradient(135deg, var(--accent-dark) 0%, var(--accent) 50%, var(--accent) 100%);
        border-radius: 20px;
        color: white;
        box-shadow: var(--shadow);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%, rgba(255,255,255,0.05) 100%);
        pointer-events: none;
    }

    .page-title {
        font-size: 2.5rem;
        margin: 0 0 12px 0;
        font-weight: 700;
        letter-spacing: -0.02em;
        position: relative;
        z-index: 1;
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin: 0;
        font-weight: 400;
        position: relative;
        z-index: 1;
        max-width: 600px;
        margin: 0 auto;
    }

    /* ✅ Filter Section - Theme-aware styling */
    .filter-section {
        background: var(--card-color);
        padding: 32px;
        border-radius: 16px;
        box-shadow: var(--shadow);
        margin-bottom: 32px;
        border: 1px solid var(--border-color);
    }

    .filter-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .filter-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--text-color);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .clear-filters-btn {
        background: var(--accent);
        color: white;
        border: 1px solid var(--accent);
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .clear-filters-btn:hover {
        background: var(--accent-dark);
        color: #ffffff;
        border-color: var(--accent-dark);
    }

    .filter-controls {
        display: grid;
        grid-template-columns: minmax(200px, 2fr) minmax(140px, 1fr) auto;
        gap: 24px;
        align-items: end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
    }

    .filter-label {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 8px;
    }

    .search-input-container {
        position: relative;
        width: 100%;
        transition: all 0.3s ease;
    }

    .search-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-color);
        font-size: 1.1rem;
        z-index: 2;
        transition: all 0.3s ease;
    }

    .filter-input {
        padding: 16px 20px 16px 52px;
        width: 100%;
        min-width: 350px;
        font-size: 1rem;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        transition: all 0.3s ease;
        background: var(--card-color);
        color: var(--text-color);
        box-shadow: var(--shadow);
        outline: none;
    }

    .filter-input:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 4px rgba(156, 39, 176, 0.2), var(--shadow);
        background: var(--card-color);
        transform: translateY(-1px);
    }

    .filter-input::placeholder {
        color: var(--subtle-text-color);
        font-style: italic;
    }

    .filter-select {
        padding: 16px 16px;
        border: 2px solid var(--border-color);
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: var(--card-color);
        color: var(--text-color);
        font-family: inherit;
        cursor: pointer;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23666' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 12px center;
        background-repeat: no-repeat;
        background-size: 16px;
        padding-right: 40px;
        box-shadow: var(--shadow);
        outline: none;
    }

    .filter-select:focus {
        border-color: var(--accent);
        box-shadow: 0 0 0 4px rgba(156, 39, 176, 0.2), var(--shadow);
        background: var(--card-color);
        transform: translateY(-1px);
    }

    .filter-select:hover {
        border-color: var(--accent);
        background: var(--card-color);
    }

    .search-btn {
        padding: 16px 24px;
        background: var(--accent);
        color: #ffffff;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: var(--shadow);
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

    .search-btn:hover {
        background: var(--accent-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow);
    }

    /* ✅ Results Info */
    .results-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding: 0 8px;
    }

    .results-count {
        font-size: 1rem;
        color: #666;
        font-weight: 500;
    }

    /* ✅ Results Summary */
    .results-summary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
        padding: 0 8px;
    }

    .results-count {
        font-size: 1rem;
        color: var(--subtle-text-color);
        font-weight: 500;
    }

    /* ✅ Rights Grid - Inspired by documents grid */
    .rights-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }

    /* ✅ Rights Cards - Theme-aware Design */
    .rights-card {
        background: var(--card-color);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 28px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: var(--shadow);
        position: relative;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        color: var(--text-color);
    }

    .rights-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, var(--accent), var(--accent-dark));
        transform: scaleX(0);
        transition: transform 0.4s ease;
    }

    .rights-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow);
        border-color: var(--accent);
    }

    .rights-card:hover::before {
        transform: scaleX(1);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 16px;
    }

    .article-number {
        background: rgba(156, 39, 176, 0.2);
        color: var(--accent);
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 1px solid rgba(156, 39, 176, 0.3);
    }

    .category-icon {
        font-size: 1.5rem;
        opacity: 0.8;
    }

    .rights-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-color);
        margin: 0 0 12px 0;
        line-height: 1.3;
        text-align: left;
    }

    .category-badge {
        display: inline-block;
        /* padding: 4px 12px; */
        border-radius: 16px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 16px;
    }

    /* Category Colors - Dark theme variants */
    .category-equality { 
        /* background: rgba(33, 150, 243, 0.2);  */
        color: #90caf9; 
        /* border: 1px solid rgba(33, 150, 243, 0.3); */
    }
    .category-freedom { 
        /* background: rgba(76, 175, 80, 0.2);  */
        color: #a5d6a7; 
        /* border: 1px solid rgba(76, 175, 80, 0.3); */
    }
    .category-exploitation { 
        /* background: rgba(244, 67, 54, 0.2);  */
        color: #ef9a9a; 
        /* border: 1px solid rgba(244, 67, 54, 0.3); */
    }
    .category-religion { 
        /* background: rgba(156, 39, 176, 0.2);  */
        color: #ce93d8; 
        /* border: 1px solid rgba(156, 39, 176, 0.3); */
    }
    .category-cultural { 
        /* background: rgba(255, 152, 0, 0.2);  */
        color: #ffcc02; 
        /* border: 1px solid rgba(255, 152, 0, 0.3); */
    }
    .category-remedies { 
        /* background: rgba(63, 81, 181, 0.2);  */
        color: #9fa8da; 
        /* border: 1px solid rgba(63, 81, 181, 0.3); */
    }

    .rights-description {
        font-size: 0.95rem;
        color: var(--subtle-text-color);
        line-height: 1.6;
        margin-bottom: 16px;
        flex-grow: 1;
        text-align: left;
    }

    .card-actions {
        display: flex;
        gap: 12px;
        margin-top: auto;
    }

    .view-details-btn {
        /* flex: .5; */
        padding: 12px 16px;
        background: var(--accent);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .view-details-btn:hover {
        background: var(--accent-dark);
        transform: translateY(-2px);
        color: #ffffff;
    }

    /* ✅ Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 32px;
        background: var(--card-color);
        border-radius: 16px;
        box-shadow: var(--shadow);
        color: var(--text-color);
    }

    .empty-state h3 {
        font-size: 1.5rem;
        color: var(--text-color);
        margin: 0 0 12px 0;
    }

    .empty-state p {
        color: var(--subtle-text-color);
        font-size: 1rem;
        margin: 0;
    }

    /* ✅ Pagination Container */
    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 2.5rem;
        padding: 1rem 0;
    }

    /* ✅ Pagination List Styling */
    .pagination-list {
        display: flex;
        gap: 10px;
        padding: 0;
        margin: 0;
        list-style: none;
        flex-wrap: wrap;
    }

    /* ✅ Pagination Links */
    .pagination-list li a {
        display: inline-block;
        min-width: 36px;
        padding: 8px 14px;
        border: 1px solid #ccc;
        color: #333;
        background: #f9f9f9;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.95rem;
        text-align: center;
        transition: all 0.2s ease-in-out;
    }

    /* ✅ Hover State */
    .pagination-list li a:hover {
        background-color: #e0e0e0;
        border-color: #aaa;
    }

    /* ✅ Active Page Styling */
    .pagination-page.active {
        background: #ae00ff;
        color: white !important;
        border-color: #e100ff;
        font-weight: 600;
        pointer-events: none;
        box-shadow: 0 0 0 2px rgba(212, 0, 255, 0.322);
    }

    /* ✅ Previous/Next Link Styling */
    .pagination-prev,
    .pagination-next {
        font-weight: 500;
        background-color: #f1f1f1;
        color: #444;
        border-color: #ccc;
    }

    .pagination-prev:hover,
    .pagination-next:hover {
        background-color: #ddd;
    }

    /* ✅ Responsive Design */
    @media (min-width: 1200px) {
        .rights-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .rights-page {
            padding: 0 16px;
        }

        .filter-controls {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .filter-input {
            min-width: auto;
        }

        .filter-header {
            flex-direction: column;
            align-items: stretch;
            gap: 16px;
        }

        .rights-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .card-actions {
            flex-direction: column;
        }

        .page-title {
            font-size: 2rem;
        }

        .results-summary {
            flex-direction: column;
            gap: 12px;
            align-items: flex-start;
        }
    }

    @media (max-width: 480px) {
        .pagination-list li a {
            padding: 6px 10px;
            font-size: 0.85rem;
        }

        .pagination {
            padding: 0.5rem 0;
        }

        .filter-section {
            padding: 20px;
        }

        .rights-card {
            padding: 20px;
        }

        .page-header {
            padding: 24px 15px;
        }
    }
</style>

    <div class="rights-page">
        <!-- Clean Header Section -->
        <div class="page-header">
            <h1 class="page-title">Fundamental Rights of India</h1>
            <p class="page-subtitle">
                Discover the 6 fundamental rights guaranteed by the Indian Constitution - your essential protections for 
                equality, freedom, and dignity as a citizen.
            </p>
        </div>

        <!-- Filter Section -->
        <section class="filter-section" role="search" aria-labelledby="filter-title">
            <div class="filter-header">
                <h2 class="filter-title" id="filter-title">
                    <i class="fas fa-search" aria-hidden="true"></i>
                    Find Your Rights
                </h2>
                <button type="button" class="clear-filters-btn" onclick="clearAllFilters()"
                        aria-label="Clear all filters">
                    <i class="fas fa-times" aria-hidden="true"></i> Clear Filters
                </button>
            </div>
            
            <form method="GET" action="/rights" class="filter-form" role="search" onsubmit="event.preventDefault(); applyFilters();">
                <div class="filter-controls" role="group" aria-labelledby="filter-title">
                    <!-- Search Input -->
                    <div class="filter-group">
                        <label for="search" class="filter-label">Search Rights</label>
                        <div class="search-input-container">
                            <input 
                            type="text" 
                            id="search" 
                            name="search" 
                            class="filter-input" 
                            placeholder="Search by right name, keywords, or article number..."
                            value="<%= currentFilters.search %>"
                            autocomplete="off"
                            >
                            <i class="fas fa-search search-icon" aria-hidden="true" onclick="applyFilters()" style="cursor: pointer;"></i>
                        </div>
                    </div>

                    <!-- Category Filter -->
                    <div class="filter-group">
                        <label for="category" class="filter-label">Category</label>
                        <select id="category" name="category" class="filter-select">
                            <option value="all" <%= currentFilters.category === 'all' ? 'selected' : '' %>>All Categories</option>
                            <% if (filterOptions && filterOptions.categories) { %>
                                <% filterOptions.categories.forEach(category => { %>
                                    <option value="<%= category.value %>" <%= currentFilters.category === category.value ? 'selected' : '' %>>
                                        <%= category.label %>
                                    </option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>

                    <!-- Search Button -->
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i>
                        <span>Search</span>
                    </button>
                </div>
            </form>
        </section>

        <!-- Results Summary -->
        <div class="results-summary" role="status" aria-live="polite">
            <div class="results-count">
                Showing <strong><%= stats.filteredResults || 0 %></strong> right<%= (stats.filteredResults !== 1) ? 's' : '' %>
            </div>
        </div>

        <!-- Rights Grid -->
        <% if (rights && rights.length > 0) { %>
            <div class="rights-grid">
                <% rights.forEach(right => { 
                    // Determine category class for styling
                    let categoryClass = 'category-equality';
                    if (right.category.includes('Freedom')) categoryClass = 'category-freedom';
                    else if (right.category.includes('Exploitation')) categoryClass = 'category-exploitation';
                    else if (right.category.includes('Religion')) categoryClass = 'category-religion';
                    else if (right.category.includes('Cultural')) categoryClass = 'category-cultural';
                    else if (right.category.includes('Remedies')) categoryClass = 'category-remedies';
                    
                    // Determine icon based on category
                    let categoryIcon = '⚖️';
                    if (right.category.includes('Freedom')) categoryIcon = '🗽';
                    else if (right.category.includes('Exploitation')) categoryIcon = '🛡️';
                    else if (right.category.includes('Religion')) categoryIcon = '🕊️';
                    else if (right.category.includes('Cultural')) categoryIcon = '📚';
                    else if (right.category.includes('Remedies')) categoryIcon = '⚖️';
                %>
                    <div class="rights-card">
                        <div class="card-header">
                            <div class="article-number">Article <%= right.articleNumber %></div>
                            <div class="category-icon"><%= categoryIcon %></div>
                        </div>
                        
                        <h3 class="rights-title"><%= right.name %></h3>
                        
                        <div class="category-badge <%= categoryClass %>">
                            <%= right.category %>
                        </div>
                        
                        <p class="rights-description">
                            <%= right.description.length > 150 ? right.description.substring(0, 150) + '...' : right.description %>
                        </p>
                        
                        <div class="card-actions">
                            <a href="<%= right.sourceLink %>" target="_blank" class="view-details-btn">
                                <i class="fas fa-external-link-alt"></i>
                                View Full Details
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h3>No rights found</h3>
                <p>Try adjusting your search criteria or browse all categories.</p>
            </div>
        <% } %>

        <!-- Pagination -->
        <% if (totalPages && totalPages > 1) { %>
            <div class="pagination" aria-label="Page divigation">
                <ul class="pagination-list">
                    <% const queryParams = new URLSearchParams(request.query); %>

                    <% function pageUrl(pageNum) {
                        queryParams.set('page', pageNum);
                        return `${request.path}?${queryParams.toString()}`;
                    } %>

                    <% if (currentPage > 1) { %>
                        <li><a href="<%= pageUrl(currentPage - 1) %>" class="pagination-prev">« Prev</a></li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li>
                            <a href="<%= pageUrl(i) %>" class="pagination-page <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li><a href="<%= pageUrl(currentPage + 1) %>" class="pagination-next">Next »</a></li>
                    <% } %>
                </ul>
            </div>
        <% } %>
    </div>


    <script>
        // Filter functionality inspired by documents.ejs
        let filterTimeout;
        
        function clearAllFilters() {
            document.getElementById('search').value = '';
            document.getElementById('category').value = 'all';
            applyFilters();
        }

        function applyFilters() {
            const search = document.getElementById('search').value.trim();
            const category = document.getElementById('category').value;
            
            const params = new URLSearchParams();
            if (search) params.set('search', search);
            if (category !== 'all') params.set('category', category);
            
            // Always reset to page 1 when filters change
            params.set('page', 1);

            const queryString = params.toString();
            const newUrl = window.location.pathname + (queryString ? '?' + queryString : '');
            window.location.href = newUrl;
        }

        function handleSearchInput() {
            clearTimeout(filterTimeout);
            const searchInput = document.getElementById('search');
            const searchIcon = document.querySelector('.search-icon');
            
            // Visual feedback during search
            if (searchInput.value.trim()) {
                searchIcon.className = 'fas fa-spinner fa-spin search-icon';
            } else {
                searchIcon.className = 'fas fa-search search-icon';
            }
            
            filterTimeout = setTimeout(() => {
                applyFilters();
            }, 300);
        }

        function showSearchLoading() {
            const searchIcon = document.querySelector('.search-icon');
            searchIcon.className = 'fas fa-spinner fa-spin search-icon';
        }

        function hideSearchLoading() {
            const searchIcon = document.querySelector('.search-icon');
            searchIcon.className = 'fas fa-search search-icon';
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('search');
            if (searchInput) {
                // Add focus/blur effects
                searchInput.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });
                
                searchInput.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                    hideSearchLoading();
                });
            }
            
            const categorySelect = document.getElementById('category');
            
            if (categorySelect) {
                categorySelect.addEventListener('change', function() {
                    showSearchLoading();
                    applyFilters();
                });
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.getElementById('search').focus();
            }
        });
    </script>